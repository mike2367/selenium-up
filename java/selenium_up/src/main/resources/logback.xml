<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--detailed explainï¼šhttps://icode.blog.csdn.net/article/details/88874162--><!-- Scan this xml with an interval of 20 seconds, add revise  --><configuration debug="true" packagingData="true" scan="true" scanPeriod="20 seconds">
          
  
  
  <property name="LOG_FILE_LOCATION" value="./log-file"/>
          
  
  
  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <!-- stdout format output -->
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
          
  
  
  <!-- daily generation -->
  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
    <!--  current log file name -->
                    
    
    
    <fileNamePattern>${LOG_FILE_LOCATION}/Log %d{yyyy-MM-dd}.log</fileNamePattern>
                    
        
    
    
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                              
      
      
      <!-- zip for on file records -->
                              
      
      
      <FileNamePattern>${LOG_FILE_LOCATION}/Log%d{yyyy-MM-dd}.log.zip</FileNamePattern>
                              
      
      
      <!-- keeps 30 days max-->
                              
      
      
      <maxHistory>30</maxHistory>
                          
    
    
    </rollingPolicy>
                    
    
    
    <!-- keeps 20MB max-->
                    
    
    
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                              
      
      
      <maxFileSize>20MB</maxFileSize>
                          
    
    
    </triggeringPolicy>
                    
    
    
    <encoder>
                              
      
      
      <!-- file format output -->
                              
      
      
      <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS}[%-5level][%thread]%logger{36} - %msg%n</pattern>
                          
    
    
    </encoder>
                
  
  
  </appender>
	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
    <smtpHost>smtp.gmail.com</smtpHost>
    <smtpPort>587</smtpPort>
    <SSL>true</SSL>
    <username>user</username>
    <password>111</password>

    <to>to@gmail.com</to>
    <from>from@gmail.com</from>
    <subject>Project log: %logger{20} - %m</subject>
    <asynchronousSending>true</asynchronousSending>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} [%-5level] [%thread] |- %m%n</pattern>
    </layout>
  </appender>

  <logger name="com.xxx.cloud.util.EmailLogger" level="ERROR" additivity="false">
    <appender-ref ref="EMAIL" />
  </logger>
  
  
  
  <logger additivity="false" level="debug" name="com.xpwi">
    <appender-ref ref="FILE"/>
  </logger>
  <!-- root -->
  <root level="trace">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
                
  </root>
    
</configuration>
